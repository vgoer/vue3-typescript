{
	"name": "vue3_ts",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vue-tsc -b && vite build",
		"preview": "vite preview",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{js,ts,vue,jsx,tsx}": [
			"biome format --write",
			"biome lint --write"
		],
		"*.{json,md,yml,yaml}": [
			"biome format --write"
		]
	},
	"dependencies": {
		"vue": "^3.5.18"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"@vitejs/plugin-vue": "^6.0.1",
		"@vue/tsconfig": "^0.7.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.5",
		"typescript": "~5.8.3",
		"vite": "^7.1.2",
		"vue-tsc": "^3.0.5"
	}
}
