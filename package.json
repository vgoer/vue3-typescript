{
	"name": "vue3_ts",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vue-tsc -b && vite build",
		"build:pro": "vite build --mode production",
		"preview": "vite preview",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"prepare": "husky"
	},
	"lint-staged": {
		"ignores": [
			"src/types/**/*.d.ts"
		],
		"*.{js,ts,vue,jsx,tsx}": [
			"biome format --write",
			"biome lint --write"
		],
		"*.{json,md,yml,yaml}": [
			"biome format --write"
		]
	},
	"dependencies": {
		"@vueuse/core": "^13.7.0",
		"axios": "^1.11.0",
		"element-plus": "^2.10.7",
		"pinia": "^3.0.3",
		"pinia-plugin-persistedstate": "^4.5.0",
		"vue": "^3.5.18",
		"vue-i18n": "^9.14.5",
		"vue-router": "^4.5.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"@iconify-json/ep": "^1.2.3",
		"@types/node": "^24.3.0",
		"@types/nprogress": "^0.2.3",
		"@vitejs/plugin-vue": "^6.0.1",
		"@vue/tsconfig": "^0.7.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.5",
		"nprogress": "^0.2.0",
		"sass": "^1.90.0",
		"sass-embedded": "^1.90.0",
		"typescript": "~5.8.3",
		"unplugin-auto-import": "^20.0.0",
		"unplugin-icons": "^22.2.0",
		"unplugin-vue-components": "^29.0.0",
		"vite": "^7.1.2",
		"vite-plugin-biome": "^1.0.12",
		"vite-plugin-inspect": "^11.3.2",
		"vue-tsc": "^3.0.5"
	}
}
